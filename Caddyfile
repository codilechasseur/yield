# Yield – Caddy reverse proxy
# DOMAIN env var is injected by docker-compose.

# ── Main app ──────────────────────────────────────────────────────────────────
{$DOMAIN} {
	reverse_proxy app:3000
}

# ── PocketBase admin UI ───────────────────────────────────────────────────────
# Access via https://pb.<your-domain>/_/
pb.{$DOMAIN} {
	reverse_proxy pocketbase:8090
}
